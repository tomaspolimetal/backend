{
  "name": "nodejs-socketio-realtime-app",
  "version": "1.0.0",
  "description": "Aplicaci√≥n Node.js con Socket.IO y base de datos para mostrar datos en tiempo real",
  "main": "server.js",
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "start": "node scripts/checkEnv.js && node server.js",
    "dev": "node scripts/checkEnv.js && nodemon server.js",
    "check-env": "node scripts/checkEnv.js",
    "migrate": "npx sequelize-cli db:migrate",
    "setup:prod": "NODE_ENV=production node scripts/setupProduction.js",
    "setup:prod-win": "set NODE_ENV=production && node scripts/setupProduction.js",
    "verify:prod": "NODE_ENV=production node scripts/verifyDatabase.js",
    "verify:prod-win": "set NODE_ENV=production && node scripts/verifyDatabase.js",
    "info:prod": "NODE_ENV=production node scripts/connectionInfo.js",
    "info:prod-win": "set NODE_ENV=production && node scripts/connectionInfo.js",
    "setup-verify": "node scripts/setupAndVerify.js",
    "create-machines": "node scripts/createMachines.js",
    "start:3002": "set PORT=3002 && npm start",
    "dev:3002": "set PORT=3002 && npm run dev"
  },
  "keywords": [
    "nodejs",
    "socketio",
    "sqlite",
    "realtime",
    "express"
  ],
  "author": "Tu Nombre",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.16.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "dotenv": "^16.5.0",
    "ngrok": "^5.0.0-beta.2",
    "nodemon": "^3.0.1",
    "sequelize-cli": "^6.6.3"
  }
}
